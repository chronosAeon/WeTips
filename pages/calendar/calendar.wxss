.calendar-root{
    font-family: simhei;
    height:100%;
}
.calendar{
  background-size: 750rpx 100%;
}
.calendar-navbar{
    display: flex;
    padding-top: 60rpx;
    justify-content: center;
    align-items: center; 
    line-height: 65rpx;


}
.calendar-navbar-button{
    flex-grow: 1;
    width: 100rpx;
    height: 50rpx;
    text-align: center;
    font-size: 30rpx;
}
.calendar-navbar-date{
    flex-grow: 1;
    width: 150rpx;
    height: 50rpx;
    text-align: center;
    font-size: 30rpx;
}

.calendar-head{
    display: flex;
    justify-content: center;
    align-items: center;
    height: 75rpx;
    /* background: #fff; */
    font-size: 35rpx;
    /* background-color: rgb(54, 207, 254); */
}
.calendar-head view{
    text-align: center;
    flex:1;
}

/* .calendar-body{
    background: #fff;
} */
.calendar-body-rows{
    display: flex;
    align-items: center;
    height: 75rpx;
    padding: 0 4rpx 8rpx;
}
.calendar-body-cols{
    display: flex;
    flex: 1;
    align-items: center;
    height: 100%;
    padding: 0 4rpx;
}
.calendar-body-item{
    display: block;
    /* background: #fff; */
    width: 100%;
    height: 100%;
}
.calendar-body-item-color{
    display: block;
    background: #fff;
    width: 100%;
    height: 100%;
    /* background-color:rgb(200, 258, 250); */
}
.calendar-body-day{
    text-align: center;
}
.calendar-body-dayex{
    text-align: center;
    font-size: 25rpx;
}

/* .calendar-detail{
    background: #fff;

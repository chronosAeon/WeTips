.thinglist{
  display: flex;
  flex-direction: row;
  
}
.calendar-detail-day{
  width: 240rpx;
  height:240rpx;
  margin-left: 60rpx;
  font-size: 100rpx;
  font-weight: bold;
  color: white;
  background-size:100% 100%;
  border-radius: 50%;
  text-align: center;
  line-height: 240rpx;
}

.today-thing{
  margin-left: 20rpx;
  padding-top: 10rpx;
  font-size: 50rpx;
  font-weight: bold;
  margin-top: 120rpx;
}
.today-index{
  text-align: center;
  margin: auto 0;
  margin-left: 40rpx;
  width: 120rpx;
  font-size: 50rpx;
}
.detail-thing{
  margin: auto 0;
  margin-left: 20rpx;
  font-size: 35rpx;
  margin-bottom: 10rpx;

}
.week-thing{
  margin-left: 50rpx;
}
.Week-thing{
  margin-left: 20rpx;
  padding-top: 10rpx;
  font-size: 50rpx;
  font-weight: bold;
 margin: auto 0;
}
.row_title_r {
  float: right;
  width: 30rpx;
  height:25rpx;
  border-style: solid;
  border-width: 1rpx;
  border-color: transparent transparent #e4e4e4 #e4e4e4;
  transform: rotate(-45deg);
  margin: auto 0;
  margin-left: 330rpx;
}

/* pages/me/myfriend/myfriend.wxss */
.rowimg{
  float: right;
  width: 20rpx;
  height: 20rpx;
  border-style: solid;
  border-width: 1rpx;
  border-color: transparent transparent red red;
  transform: rotate(-135deg);
  margin:auto 0;
  margin-right: 50rpx;
}
.rowimg_show{
  float: right;
  width: 20rpx;
  height: 20rpx;
  border-style: solid;
  border-width: 1rpx;
  border-color: transparent transparent red red;
  transform: rotate(-45deg);
  margin:auto 0;
  margin-right: 50rpx;
  margin-top: 5rpx;
}
.contianer{
  display: flex;
  flex-direction: row ;
  margin-left: 10rpx;
}
.bind{
  width: 250rpx;
  height: 100rpx;
  margin-top: 50rpx;
  background-color: #eee;
}
.row {
  position: relative;
  padding: 20rpx 0;
  border-bottom:1rpx solid #e4e4e4;

}
.row_l {
  float: left;
  width: 52rpx;
  height: 52rpx;
  margin-right: 42rpx;
}
.row_l image{
  width: 100%;
  height: 100%;
}
.row_text {
  font-size: 40rpx;
  color: #333;
  padding-left: 70rpx;
}
.arrows {
  position: absolute;
  right: 50rpx;
  top: 50%;
  width: 20rpx;
  height: 20rpx;
  border-width: 1rpx;
  border-color: #999 #999 transparent transparent;
  border-style: solid;
  -webkit-transform: rotate(45deg) translateY(-50%);
  transform: rotate(45deg) translateY(-50%);
}
